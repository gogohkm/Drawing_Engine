{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/design_input_v3.schema.json",
  "title": "DesignInputV3",
  "type": "object",
  "required": [
    "meta",
    "request"
  ],
  "additionalProperties": false,
  "properties": {
    "meta": {
      "type": "object",
      "required": [
        "project",
        "units"
      ],
      "additionalProperties": false,
      "properties": {
        "project": {
          "type": "string"
        },
        "units": {
          "type": "string",
          "enum": [
            "mm",
            "cm",
            "m",
            "inch",
            "ft"
          ]
        },
        "author": {
          "type": "string"
        },
        "discipline": {
          "type": "string",
          "enum": [
            "A",
            "S",
            "M",
            "E",
            "P",
            "C",
            "T",
            "X"
          ]
        },
        "revision": {
          "type": "string"
        },
        "created_at": {
          "type": "string"
        }
      }
    },
    "settings": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "origin": {
          "$ref": "#/$defs/point"
        },
        "angle_unit": {
          "type": "string",
          "enum": [
            "deg",
            "rad"
          ],
          "default": "deg"
        },
        "text_height": {
          "type": "number",
          "minimum": 0.1,
          "description": "기본 텍스트 높이(모델 단위). 예: mm 기준 2.5~3.5"
        },
        "dim_offset": {
          "type": "number",
          "minimum": 0,
          "description": "치수선 기본 이격"
        },
        "layer_standard": {
          "type": "string",
          "description": "예: NCS, 사내표준"
        },
        "default_layers": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          },
          "description": "논리 역할 → 레이어명 매핑 (예: {\"GRID\":\"A-GRID\"})"
        }
      }
    },
    "grids": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "x": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/gridLine"
          }
        },
        "y": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/gridLine"
          }
        }
      }
    },
    "levels": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "name",
          "elevation"
        ],
        "additionalProperties": false,
        "properties": {
          "name": {
            "type": "string"
          },
          "elevation": {
            "type": "number",
            "description": "기준 대비 레벨(모델 단위)"
          }
        }
      }
    },
    "architectural": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "walls": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/wall"
          }
        },
        "openings": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/opening"
          }
        },
        "rooms": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/room"
          }
        }
      }
    },
    "structural": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "columns": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/column"
          }
        },
        "beams": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/beam"
          }
        },
        "slabs": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/slab"
          }
        }
      }
    },
    "steel": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "members": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/steelMember"
          }
        },
        "connections": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/steelConnection"
          }
        }
      }
    },
    "rc": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "rebar_sets": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/rebarSet"
          }
        },
        "member_list": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/memberListItem"
          }
        }
      }
    },
    "request": {
      "type": "object",
      "required": [
        "drawing_type"
      ],
      "additionalProperties": false,
      "properties": {
        "drawing_type": {
          "type": "string",
          "enum": [
            "A_FLOOR_PLAN",
            "A_SECTION",
            "A_ELEVATION",
            "S_GENERAL_ARRANGEMENT",
            "S_STEEL_CONNECTION_DETAIL",
            "S_RC_REBAR_DETAIL",
            "S_MEMBER_SCHEDULE",
            "DETAIL_GENERIC"
          ]
        },
        "sheet_id": {
          "type": "string",
          "description": "예: A101, S201"
        },
        "title": {
          "type": "string"
        },
        "target_dxf_path": {
          "type": "string"
        },
        "tolerance": {
          "type": "number",
          "minimum": 0,
          "default": 1.0
        },
        "view_bounds": {
          "$ref": "#/$defs/bounds",
          "description": "작도 대상 영역(선택)"
        },
        "notes": {
          "type": "string"
        }
      }
    }
  },
  "$defs": {
    "point": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 2,
      "maxItems": 2
    },
    "bounds": {
      "type": "object",
      "required": [
        "min",
        "max"
      ],
      "additionalProperties": false,
      "properties": {
        "min": {
          "$ref": "#/$defs/point"
        },
        "max": {
          "$ref": "#/$defs/point"
        }
      }
    },
    "gridLine": {
      "type": "object",
      "required": [
        "id",
        "coord",
        "label"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "coord": {
          "type": "number"
        },
        "label": {
          "type": "string"
        }
      }
    },
    "wall": {
      "type": "object",
      "required": [
        "id"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "boundary": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "minItems": 3,
          "description": "벽 외곽 경계(닫힌 폴리라인). 제공되면 offset 없이 그대로 사용"
        },
        "centerline": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "minItems": 2,
            "maxItems": 2
          },
          "minItems": 2,
          "description": "벽 중심선(폴리라인). boundary가 없을 때 thickness와 함께 사용"
        },
        "thickness": {
          "type": "number",
          "minimum": 0
        },
        "closed": {
          "type": "boolean",
          "default": false
        },
        "layer": {
          "type": "string"
        }
      },
      "oneOf": [
        {
          "required": [
            "boundary"
          ]
        },
        {
          "required": [
            "centerline",
            "thickness"
          ]
        }
      ]
    },
    "opening": {
      "type": "object",
      "required": [
        "id",
        "type",
        "center",
        "width"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "DOOR",
            "WINDOW",
            "VOID"
          ]
        },
        "center": {
          "$ref": "#/$defs/point"
        },
        "width": {
          "type": "number",
          "minimum": 0
        },
        "height": {
          "type": "number",
          "minimum": 0
        },
        "orientation_deg": {
          "type": "number"
        },
        "host_wall_id": {
          "type": "string"
        },
        "layer": {
          "type": "string"
        }
      }
    },
    "room": {
      "type": "object",
      "required": [
        "id",
        "name",
        "label_point"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "label_point": {
          "$ref": "#/$defs/point"
        },
        "area": {
          "type": "number"
        },
        "layer": {
          "type": "string"
        }
      }
    },
    "column": {
      "type": "object",
      "required": [
        "id",
        "center",
        "shape"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "center": {
          "$ref": "#/$defs/point"
        },
        "shape": {
          "type": "string",
          "enum": [
            "RECT",
            "CIRC"
          ]
        },
        "b": {
          "type": "number"
        },
        "h": {
          "type": "number"
        },
        "r": {
          "type": "number"
        },
        "rotation_deg": {
          "type": "number"
        },
        "layer": {
          "type": "string"
        }
      }
    },
    "beam": {
      "type": "object",
      "required": [
        "id",
        "start",
        "end"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "start": {
          "$ref": "#/$defs/point"
        },
        "end": {
          "$ref": "#/$defs/point"
        },
        "width": {
          "type": "number"
        },
        "layer": {
          "type": "string"
        }
      }
    },
    "slab": {
      "type": "object",
      "required": [
        "id",
        "boundary"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "boundary": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/point"
          },
          "minItems": 3
        },
        "thickness": {
          "type": "number"
        },
        "layer": {
          "type": "string"
        }
      }
    },
    "steelMember": {
      "type": "object",
      "required": [
        "id",
        "type",
        "start",
        "end"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "BEAM",
            "COLUMN",
            "BRACE"
          ]
        },
        "section": {
          "type": "string",
          "description": "예: H-400x200x8x13"
        },
        "start": {
          "$ref": "#/$defs/point"
        },
        "end": {
          "$ref": "#/$defs/point"
        },
        "layer": {
          "type": "string"
        }
      }
    },
    "steelConnection": {
      "type": "object",
      "required": [
        "id",
        "type",
        "at_point"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "SHEAR_TAB",
            "END_PLATE",
            "BASE_PLATE",
            "GUSSET"
          ]
        },
        "at_point": {
          "$ref": "#/$defs/point"
        },
        "bolt_dia": {
          "type": "number"
        },
        "bolt_pattern": {
          "type": "object"
        },
        "plate_thk": {
          "type": "number"
        },
        "weld_note": {
          "type": "string"
        },
        "layer": {
          "type": "string"
        }
      }
    },
    "rebarSet": {
      "type": "object",
      "required": [
        "id",
        "member_id",
        "bar_dia",
        "spacing"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "member_id": {
          "type": "string"
        },
        "bar_dia": {
          "type": "string",
          "description": "예: D13"
        },
        "spacing": {
          "type": "number"
        },
        "shape_points": {
          "type": "array",
          "items": {
            "$ref": "#/$defs/point"
          }
        },
        "mark": {
          "type": "string"
        },
        "layer": {
          "type": "string"
        }
      }
    },
    "memberListItem": {
      "type": "object",
      "required": [
        "id",
        "type",
        "qty"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": [
            "BEAM",
            "COLUMN",
            "SLAB",
            "WALL",
            "FOOTING",
            "STEEL_MEMBER"
          ]
        },
        "spec": {
          "type": "string"
        },
        "qty": {
          "type": "number"
        },
        "note": {
          "type": "string"
        }
      }
    }
  }
}